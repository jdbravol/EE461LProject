<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:baselineAligned="false">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="322dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:fontFamily="serif"
            android:text="Login"
            android:textColor="?android:attr/colorActivatedHighlight"
            android:textSize="30sp"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="45dp" />

        <EditText
            android:id="@+id/passwordLine"
            android:layout_width="215dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/usernameLine" />

        <EditText
            android:id="@+id/usernameLine"
            android:layout_width="215dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="71dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            android:text="Login"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordLine"
            app:layout_constraintVertical_bias="0.108"
            tools:layout_editor_absoluteX="273dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="97dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:text="Username:"
            android:textColor="?android:attr/colorMultiSelectHighlight"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/usernameLine"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="94dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:text="Password:"
            android:textColor="?android:attr/colorMultiSelectHighlight"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/passwordLine"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/forgotPassButton"
            android:layout_width="99dp"
            android:layout_height="66dp"
            android:layout_marginEnd="14dp"
            android:text="Forgot Password"
            app:layout_constraintRight_toLeftOf="@+id/loginButton"
            android:layout_marginRight="14dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/loginButton"
            tools:layout_editor_absoluteX="160dp" />

        <Button
            android:id="@+id/newUserButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:text="New User"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/forgotPassButton"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.948"
            app:layout_constraintBaseline_toBaselineOf="@+id/forgotPassButton" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>