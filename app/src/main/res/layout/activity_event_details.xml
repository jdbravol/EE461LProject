<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ee461lproject.event_details">


    <TextView
        android:id="@+id/eventNameStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Event Name"
        android:textColor="@color/burntOrange"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orgTitleStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Organization"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventNameStudent" />

    <EditText
        android:id="@+id/orgTextStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-80dp"
        android:layout_marginTop="-44dp"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="Org FooBar"
        android:inputType="none"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/orgTitleStudent"
        app:layout_constraintTop_toBottomOf="@+id/orgTitleStudent"
        android:focusable="false"/>

    <TextView
        android:id="@+id/dateTitleStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Date"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/orgTextStudent"
        app:layout_constraintTop_toBottomOf="@+id/orgTextStudent" />

    <EditText
        android:id="@+id/dateTextStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="-1dp"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="99/99/9999"
        android:inputType="none"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/dateTitleStudent"
        app:layout_constraintTop_toBottomOf="@+id/dateTitleStudent"
        android:focusable="false"/>

    <TextView
        android:id="@+id/locationTitleStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-12dp"
        android:layout_marginTop="9dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Location"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/dateTextStudent"
        app:layout_constraintTop_toBottomOf="@+id/dateTextStudent" />

    <EditText
        android:id="@+id/locationTextStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-12dp"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="123 University Drive"
        android:inputType="none"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/locationTitleStudent"
        app:layout_constraintTop_toBottomOf="@+id/locationTitleStudent"
        android:focusable="false"/>

    <TextView
        android:id="@+id/descriptionTitleStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-12dp"
        android:layout_marginTop="9dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Description"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/locationTextStudent"
        app:layout_constraintTop_toBottomOf="@+id/locationTextStudent" />

    <Button
        android:id="@+id/rsvpButtonStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:text="RSVP"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextStudent" />

    <EditText
        android:id="@+id/descriptionTextStudent"
        android:layout_width="195dp"
        android:layout_height="181dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="This is an event."
        android:inputType="none"
        android:scrollIndicators="right"
        android:scrollbars="vertical"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/createEventButton"
        app:layout_constraintLeft_toLeftOf="@+id/descriptionTitleStudent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTitleStudent"
        app:layout_constraintVertical_bias="0.0"
        android:focusable="false"/>

</android.support.constraint.ConstraintLayout>
